<!DOCTYPE html>
<html>
    <head>
        <title>
            SIH2020
        </title>
        
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <link href="https://fonts.googleapis.com/css?family=Montserrat|Poppins&display=swap" rel="stylesheet">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" style="font-size: 30px;" href="/"><b>VIGILANTES</b></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
        <div id="message">
            <%=message %>
          </div>
        <div class="container" style="margin-top: 4%;margin-bottom: 3%;">
            <h3><i># No.1 Platform for farmers to sell their produce at a better price.</i></h3>
        </div>
        <div class="box">
            <div class="tab">
                <button class="tablinks" onclick="xyz('l')">Login</button>
                <button class="tablinks" onclick="xyz('s')">Register</button>
            </div>
            <div class="tabcontent">
                <h1>Login</h1>
                <form method="POST" action="/">
                    <input type="number" placeholder="Phone No" name="phoneNo" required>
                    <input id="password" placeholder="password" name="password" type="password"required>
                    <button type="submit" name="authBtn" value="login">
                        Login
                    </button>
                </form>
            </div>
            <div class="tabcontent">
                <h1>Register</h1>
                <form method="POST" action="/">
                    <input placeholder="Full Name" name ="name" required>
                    <input placeholder="Address" name="address" required>
                    <input type="number" placeholder="Phone No" name="phoneNo" required>
                    <input id="email" placeholder="Email" name="email" type="email">
                    <input id="password" placeholder="password" name="password" type="password"required>
                    <input placeholder="Confirm Password" type="password" name="cpassword" required>
                    
                    <select name="userType" required>
                        <option value="farmer">Farmer</option>
                        <option value="buyer">Buyer</option>
                        <option value="transportAgent">Transport Agent</option>
                    </select>
                    <button id="btn" type="submit" name="authBtn" value="register">
                        Register
                    </button>
                </form>
            </div>
        </div>
       
    </body>
    <script>
        var tabcontent= document.getElementsByClassName("tabcontent");
            var log = 'l';
            xyz(log);
            function xyz(log){
                for(i=0;i<tabcontent.length;i++){
                    tabcontent[i].style.display="none";
                }
                if(log=="l"){
                    tabcontent[0].style.display="block";
                } else if (log=="s"){
                    tabcontent[1].style.display="block";
                }
            }
    </script>
</html>